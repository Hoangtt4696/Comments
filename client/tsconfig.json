{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "lib": [ "es6", "dom" ],
    "types": [ "react", "react-dom", "react-hot-loader", "react-router", "react-router-dom", "webpack-env" ],
    "experimentalDecorators": true,
    "outDir": "dist"
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}
